|{% block extrahead %}

link(href='/static/css/app.css', rel='stylesheet')

|{% endblock %}

|{% block extrajs %}

script(src="/static/js/app.js")
script(src="/static/reports/js/index.js")

|{% endblock %}

|{% block breadcrumbs %}

<div class="breadcrumbs col-xs-12" style="height: 40px;">
<a href="/">Inicio</a>
span &nbsp; &rsaquo; &nbsp;
span Reportes
<div id="user-tools" class="pull-right">
