doctype html
html(lang="en")
    head
        title Lista de órdenes de compra

        |{% load humanize %}

        link(rel="stylesheet" href="/static/css/reset.css")

        link(rel="stylesheet" href="/static/css/bootstrapMod.css")
        link(rel="stylesheet" href="/static/css/orderpdf.css")


    body(style="font-family:helvetica;")

        .col-xs-12
            hr(style="border-top: 1px solid #ccc;")
            img(src= "/media/img/coto.png" style="width:300px;height:auto;margin-bottom:0px;")

        .col-xs-12
            hr(style="border-top: 1px solid #ccc;")
            h4(style="text-align: center; vertical-align: middle;font-size:13px") ORDENES INVOLUCRADAS
            hr(style="border-top: 1px solid #ccc;")

        .col-xs-12
            form.producttable
                //tabla
                .form-group.row
                    .col-xs-12(style="font-size:13px")
                        table.table.table-bordered
                            thead: tr
                                th Orden #
                                th Fecha
                                th Proveedor
                                th Total
                            tbody
                                |{% for detail in details %}
                                tr
                                    td: a(target='_blank')(href='/orderview/?order={{detail.0}}') {{detail.0}}
                                    td {{detail.1 | date:"SHORT_DATE_FORMAT" }}
                                    td {{detail.2}}
                                    td ₡ {{detail.3 | floatformat:"2"|intcomma}}
                                |{% endfor %}


