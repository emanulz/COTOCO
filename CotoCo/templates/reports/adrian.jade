doctype html
html(lang="en")
    head

        |{% load humanize %}
        |{% load app_filters %}

        link(rel="stylesheet" href="/static/css/reset.css")

        link(rel="stylesheet" href="/static/css/bootstrapMod.css")
        link(rel="stylesheet" href="/static/css/orderpdf.css")


    body(style="font-family:helvetica;")

        .col-xs-12
            hr(style="border-top: 1px solid #ccc;")
            img(src= "/media/img/coto.png" style="width:300px;height:auto;margin-bottom:0px;")

        .col-xs-12
            hr(style="border-top: 1px solid #ccc;")
            h4(style="text-align: center; vertical-align: middle;font-size:13px") REPORTE DE RESUMEN DE MATERIALES
            hr(style="border-top: 1px solid #ccc;")

        .col-xs-4
            h6 <b>Fecha:</b> &nbsp {{date | date:"SHORT_DATE_FORMAT"}}
            h6 <b>Proyecto:</b> {{project}}

        .col-xs-4
            h6 <b>Actividad:</b> {{activity}}
            h6 <b>Proveedor:</b> {{supplier}}

        .col-xs-4
            |{% if date_ini = '-' %}
            h6 <b>Fecha Inicial:</b> {{date_ini}}
            h6 <b>Fecha Final:</b> {{date_end}}
            |{% else %}
            h6 <b>Fecha Inicial:</b> {{date_ini | date:"SHORT_DATE_FORMAT"}}
            h6 <b>Fecha Final:</b> {{date_end | date:"SHORT_DATE_FORMAT"}}
            |{% endif %}

        .col-xs-12
            form.producttable
                //tabla
                .form-group.row
                    .col-xs-12(style="font-size:11px")
                        table.table.table-bordered
                            thead: tr
                                th Código
                                th Descripción
                                th Unidad
                                th Presupuestado
                                th Ordenado
                                th Facturado
                                th Transito
                                th Requisado
                                th Inventario
                                //th Observaciones
                            tbody
                            |{% for object in objects %}
                            tr
                                td {{object.code}}
                                td {{object.description}}
                                td {{object.unit}}
                                td -
                                td {{object.ordered}}
                                td {{object.billed}}
                                td {{object.ordered | subtract:object.billed | floatformat:"2"|intcomma}}
                                td -
                                td -
                                
                            // td -
                            |{% endfor %}
        
